---
import { Image } from 'astro:assets';
import brianHodgkinsImg from "../assets/brian-hodgkins.png"
import jillFeldmanImg from "../assets/jill-feldman.png"
import ianStraayerImg from "../assets/ian-straayer.png"
import reneeKiefferImg from "../assets/renee-kieffer.png"
const testimonials = [
  {
    quote: "We have been using Everest Medical Solutions for our transcription needs for over a year now. We have been receiving high-quality reports that are well-liked by our staff and referring physician offices. We highly recommend their valuable service to anyone using DR PACS.",
    author: "Saurin J. Shah, M.D.",
    title: "Medical Director Advanced Radiology Imaging Associates",
    company: "Fort Myers, Florida, USA",
    image: brianHodgkinsImg
  },
  {
    quote: "Samaritan Hospital is very satisfied with the transcription service offered by Everest Medical Solutions. Because of outsourcing to Everest we do not have to worry about hiring or retaining in-house transcriptionists.",
    author: "William Lindsey",
    title: "Radiology Director",
    company: "Samaritan Healthcare, Moses Lake, Washington, USA",
    image: jillFeldmanImg
  },
  {
    quote: "I am extremely pleased by the service offered by Everest Medical Solutions. Everest can type reports on a very short notice and can also handle any fluctuations in the volume of reports which gives me a lot of flexibility in my schedule.",
    author: "lngrid Franze, MD",
    title: "",
    company: "Buena Vista Regional Medical Center, Storm Lake, Iowa, USA",
    image: ianStraayerImg
  },
  // {
  //   quote: "Seeing more than 90% of our members engage with this platform daily is a testament to the program's effectiveness. We've seen significant improvements in our members' health outcomes and quality of life.",
  //   author: "Renee Kieffer",
  //   title: "Nurse Practitioner",
  //   company: "Alameda Alliance for Health",
  //   image: reneeKiefferImg
  // },
];
---

<section class="bg-gray-100 py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-serif font-bold text-center mb-12">What motivates us</h2>
    <div class="flex overflow-x-auto snap-x snap-mandatory pb-4">
      {testimonials.map((testimonial) => (
        <div class="flex-shrink-0 w-full sm:w-1/2 md:w-1/3 snap-start">
          <div class="bg-white rounded-lg shadow-lg p-8 mx-4">
            <p class="text-gray-600 italic mb-4">{testimonial.quote}</p>
            <div class="flex items-center">
              <Image 
                src={testimonial.image} 
                alt={testimonial.author} 
                class="w-12 h-12 rounded-full mr-4"
                // width={600}
                // height={400}
              />
              <div>
                <p class="font-semibold">{testimonial.author}</p>
                <p class="text-sm text-gray-500">{testimonial.title}</p>
                <p class="text-sm text-gray-500">{testimonial.company}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
