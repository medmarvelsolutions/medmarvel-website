---
import { Icon } from 'astro-icon/components';

const features = [
  { icon: 'day-night', title: 'Night time and overflow coverage' },
  { icon: 'reduced-cost', title: 'Reduced Cost' },
  { icon: 'fast', title: 'Faster Turnaround Times' },
  { icon: 'increase', title: 'Increased Productivity'},
  { icon: 'global', title: 'Global Delivery Model' },
];

---

<div class="bg-white text-[#335175] p-8">
    <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
      {features.map((feature) => (
        <div class="flex flex-col items-center">
          <Icon name={feature.icon} class="w-16 h-16 mb-4" />
          <p class="text-sm font-semibold text-center">{feature.title}</p>
        </div>
      ))}
    </div>
  </div>