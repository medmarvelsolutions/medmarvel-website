---
const metrics = [
  { value: '>15', label: 'USA Hospitals'},
  { value: '>50', label: 'USA Doctors'},
  { value: '>1 million', label: 'Cases' },
];
---

<section class="bg-white pb-16 pt-8">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-serif font-bold text-center mb-12">Our Impact</h2>
    <div class="flex flex-col md:flex-row justify-between items-center md:items-start space-y-12 md:space-y-0">
      {metrics.map((metric) => (
        <div class="text-center md:w-1/3">
          <div class="flex items-baseline justify-center">
            <span class="text-7xl font-bold text-[#335175]">{metric.value}</span>
          </div>
          <p class="mt-4 text-lg font-semibold text-gray-700 max-w-[200px] mx-auto">{metric.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>
