---
import { Image } from 'astro:assets';
import logoImg from '../assets/logo.jpeg';

const navItems = [
  { label: 'Home', href: '/' },
  { label: 'Solutions', href: '/services/product-development' },
  // { label: 'Who We Help', href: '#' },
  // { label: 'Outcomes', href: '#' },
  { label: 'About Us', href: '/about-us' },
  // { label: 'Resources', href: '#' },
];
---

<header class="bg-white shadow-md sticky top-0">
  <div class="container mx-auto px-8 py-4 flex justify-between items-center">
    <a href="/" class="flex font-serif font-bold items-center">
      <Image 
        src={logoImg} 
        alt="Company Logo Image" 
        class="rounded-lg"
        width={200}
      />
      <!-- <span class="ml-2">Medmarvel Solutions Pvt. Ltd.</span> -->
    </a>
    <nav class="hidden md:flex space-x-6">
      {navItems.map(item => (
        <a href={item.href} class="text-gray-700 hover:text-primary-500 transition duration-150 ease-in-out">
          {item.label}
        </a>
      ))}
    </nav>
    <!-- <a href="/#" class="bg-primary-500 text-white px-4 py-2 rounded hover:bg-primary-600 transition duration-150 ease-in-out">
      Contact Us
    </a> -->
  </div>
</header>
